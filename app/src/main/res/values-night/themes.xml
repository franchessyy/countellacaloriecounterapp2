<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Night Mode Theme -->
    <style name="Theme.Countella.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary and secondary colors for night mode -->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantNight</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryNight</item> <!-- Correct reference for night -->
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryNight</item> <!-- Correct reference for night -->

        <!-- Background color for night mode -->
        <item name="android:windowBackground">@color/backgroundColorNight</item>

        <!-- Customize Status Bar and Navigation Bar colors for night mode -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryNight</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/colorSecondaryNight</item>
    </style>

</resources>
